RewriteEngine ON
Options All -Indexes

# Redirigir URLs que comienzan con "admin" a index.php con el parámetro "admin"
RewriteCond %{REQUEST_URI} ^/admin [NC]
RewriteRule ^admin/([a-zA-Z0-9/ñÑ-]+)$ index.php?admin=$1 [L,QSA]

# Redirigir todas las demás URLs a index.php con el parámetro "views"
RewriteRule ^([a-zA-Z0-9/ñÑ-]+)$ index.php?views=$1 [L,QSA]

